[flake8]
max-line-length = 88
extend-ignore = E203, W503, E501, F401, F403, F811, F841, E722
exclude = 
    .git,
    __pycache__,
    migrations,
    .venv,
    venv,
    .tox,
    .eggs,
    *.egg-info,
    build,
    dist,
    tests

per-file-ignores =
    __init__.py:F401
    tests/*:F401,F811,F841,E722,S101
    main.py:F401,F403
    test_*.py:F401,F811,F841,E722

[bandit]
exclude_dirs = tests,migrations,venv,.venv
skips = B101,B601